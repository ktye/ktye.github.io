set -e
set -x

if [ "$1" = "clean" ];then
	rm *.k *.out g.go gc g.exe
	exit 0
fi

if [ "$1" = "g" ]; then
	sed -f g.sed k.go > g.go
	cat p.go         >> g.go
	go build            g.go
	exit 0
fi

if [ -f "$1.go" ]; then
	f=$1
 	wg -k $f.go > $f.k
	k $f.k ../pd.k -e "\`\"$f.out\"<pd\`\`"
	exit 0
fi

for f in *.go; do
 	wg -k $f.go > $f.k
	k $f.k ../pd.k -e "\`\"$f.out\"<pd\`\`"
done

